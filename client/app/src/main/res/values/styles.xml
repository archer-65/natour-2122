<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_natour_logo</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRoundSquarePercent" parent="Widget.AppCompat.ActionButton">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ThemeOverlay.NaTour.ElevationOverlayDisabled" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Theme.Natour.Widget.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="Widget.NaTour.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_settings</item>
        <item name="colorAccent">@color/md_theme_light_primary</item>
    </style>

</resources>