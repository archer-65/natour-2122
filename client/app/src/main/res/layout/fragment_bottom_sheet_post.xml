<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/private_msg_button"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Contatta in privato"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:textColorPrimary"
            app:icon="@drawable/ic_chat_bubble_outline_24"
            app:iconPadding="33dp"
            app:iconTint="?android:textColorPrimary" />

        <Button
            android:id="@+id/report_post_button"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Segnala questo post"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?colorError"
            app:icon="@drawable/ic_baseline_error_outline_24"
            app:iconPadding="33dp"
            app:iconTint="?colorError" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>