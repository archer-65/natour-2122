<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.unina.natourkt.presentation.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigation_home_to_navigation_auth_flow"
            app:destination="@id/navigation_auth_flow"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_viewer_post"
            app:destination="@id/navigation_viewer_post" />
    </fragment>

    <fragment
        android:id="@+id/navigation_viewer_post"
        android:name="com.unina.natourkt.presentation.post_details.PostDetailsFragment"
        android:label="Dettaglio post"
        tools:layout="@layout/fragment_post_details">

        <argument
            android:name="postId"
            app:argType="long"

            />
        <argument
            android:name="authorId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/navigation_routes"
        android:name="com.unina.natourkt.presentation.routes.RoutesFragment"
        android:label="@string/title_routes"
        tools:layout="@layout/fragment_routes">
        <action
            android:id="@+id/action_navigation_routes_to_route_details"
            app:destination="@id/navigation_route_details" />
        <action
            android:id="@+id/action_navigation_routes_to_navigation_new_route_info"
            app:destination="@id/navigation_new_route_info" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.unina.natourkt.presentation.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_navigation_viewer_post"
            app:destination="@id/navigation_viewer_post" />
    </fragment>

    <navigation
        android:id="@+id/navigation_auth_flow"
        app:startDestination="@id/navigation_login">

        <fragment
            android:id="@+id/navigation_login"
            android:name="com.unina.natourkt.presentation.login.LoginFragment"
            android:label="Login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/navigation_login_to_navigation_home"
                app:destination="@id/navigation_home"
                app:popUpTo="@id/navigation_auth_flow"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/navigation_login_to_navigation_registration"
                app:destination="@id/navigation_registration" />
            <action
                android:id="@+id/navigation_login_to_navigation_forgot_password"
                app:destination="@id/navigation_forgot_password" />
        </fragment>

        <fragment
            android:id="@+id/navigation_forgot_password"
            android:name="com.unina.natourkt.presentation.forgot_password.forgot.ForgotPasswordFragment"
            android:label="Reset password"
            tools:layout="@layout/fragment_forgot_password">
            <action
                android:id="@+id/navigation_forgot_password_to_navigation_new_password"
                app:destination="@id/navigation_new_password" />
        </fragment>

        <fragment
            android:id="@+id/navigation_new_password"
            android:name="com.unina.natourkt.presentation.forgot_password.reset.ResetPasswordFragment"
            android:label="Nuova password"
            tools:layout="@layout/fragment_reset_password">
            <action
                android:id="@+id/navigation_new_password_to_navigation_login"
                app:destination="@id/navigation_login"
                app:popUpTo="@id/navigation_login"
                app:popUpToInclusive="true" />
        </fragment>

        <fragment
            android:id="@+id/navigation_registration"
            android:name="com.unina.natourkt.presentation.registration.RegistrationFragment"
            android:label="Registrazione"
            tools:layout="@layout/fragment_registration">
            <action
                android:id="@+id/navigation_registration_to_navigation_confirmation"
                app:destination="@id/navigation_confirmation" />
        </fragment>

        <fragment
            android:id="@+id/navigation_confirmation"
            android:name="com.unina.natourkt.presentation.registration.ConfirmationFragment"
            android:label="Conferma codice"
            tools:layout="@layout/fragment_confirmation">
            <action
                android:id="@+id/navigation_confirmation_to_navigation_login"
                app:destination="@id/navigation_login"
                app:popUpTo="@id/navigation_login"
                app:popUpToInclusive="true" />
        </fragment>

    </navigation>

    <fragment
        android:id="@+id/navigation_route_details"
        android:name="com.unina.natourkt.presentation.route_details.RouteDetailsFragment"
        android:label="fragment_route_details"
        tools:layout="@layout/fragment_route_details" />

    <fragment
        android:id="@+id/navigation_new_route_info"
        android:name="com.unina.natourkt.presentation.new_route.NewRouteInfoFragment"
        android:label="NewRouteInfoFragment" >
        <action
            android:id="@+id/action_navigation_new_route_info_to_navigation_new_route_map"
            app:destination="@id/navigation_new_route_map" />
    </fragment>
    <fragment
        android:id="@+id/navigation_new_route_map"
        android:name="com.unina.natourkt.presentation.new_route.NewRouteMapFragment"
        android:label="fragment_new_route_map"
        tools:layout="@layout/fragment_new_route_map" />

</navigation>